<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="inputViewModel" type="be.hogent.nativeapps.mvc_example.InputViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <!--
        The preceding text has been moved from the Activity to here as how we display the user's input is the concern of the View, not the Controller
        -->
        <TextView
                android:id="@+id/text_main_writtenText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{"The user wrote " + inputViewModel.userInput}'
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@id/editText_main_userInput"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/full_names"/>


        <EditText
                android:id="@+id/editText_main_userInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:importantForAutofill="no"
                android:inputType="text"
                android:text="@={inputViewModel.userInput}"
                app:layout_constraintBottom_toTopOf="@id/button_main_updateText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_main_writtenText"/>

        <Button
                android:id="@+id/button_main_updateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/main_updateText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>